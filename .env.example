# .env.example - 환경 변수 예시 파일

# LLM API Keys (둘 중 하나만 설정하면 됩니다)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# LLM 설정
DEFAULT_LLM_PROVIDER=openai  # openai 또는 anthropic
DEFAULT_MODEL=gpt-4         # gpt-4, gpt-3.5-turbo, claude-3-sonnet-20240229

# 분석 설정
MAX_TOKENS_PER_REQUEST=2000
TEMPERATURE=0.1
ENABLE_MOCK_MODE=false      # 테스트용, true로 설정하면 실제 API 호출 없이 Mock 결과 반환

# 웹 인터페이스 설정  
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# 파일 처리 설정
MAX_PDF_SIZE_MB=10
TEMP_FILE_CLEANUP=true
MAX_RELATED_PAPERS=10

# 로깅 설정
LOG_LEVEL=INFO             # DEBUG, INFO, WARNING, ERROR
LOG_FILE=logs/treellm.log
ENABLE_AGENT_LOGGING=true
